

<div class="">
    <NavLink href="@Href" class="card mb-3 text-decoration-none" style="max-width: 540px;">

        <div class="row g-0">
            <div class="col-md-6">
                <img src="@Item.ImgUrl" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col col-md-6">
                <div class="card-body">
                    <h5 class="card-title">@Item.ProductName</h5>
                    <p class="card-text">@Item.ShortDescription</p>
                    @if (Item.InStock)
                    {
                        <p class="card-text"><small class="text-success">Item in stock</small></p>
                    }
                    else
                    {
                        <p class="card-text"><small class="text-danger">Item out of stock</small></p>
                    }

                    <p class="card-text text-danger">$ @Item.Price</p>
                </div>
            </div>
        </div>
    </NavLink>
</div>



@code {
    [Parameter]
    public Product Item { get; set; }
    public string Href { get; set; }

    protected override void OnInitialized()
    {
        Href = "product/" + Item.Id.ToString();
    }
}
